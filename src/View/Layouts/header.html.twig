{% block header %}
<header>
    <nav class="main-nav navbar navbar-light nav-header">
        <div class="container-fluid d-md-flex justify-content-between">
                <div class="logo ps-5 py-3 col-xxl-2 col-ms-12">
                    <a href="/home" class="navbar-brand fs-2">
                        <span class="site-name">Kintsukuroi</span>
                        <span class="site-slogan"> 金継ぎ</span>
                    </a>
                </div>
            <div class="col-xxl-4 col-ms-12">
                <form method="GET" action="/products/search" class="d-flex">
                    <input class="form-control nav-search" type="search" id="keywords" name="keywords" placeholder="Rechercher"
                        aria-label="Search" />
                    <button class="btn align-self-center nav-search-btn" style="margin-left:-1rem;" type="submit"><i
                            class="bi bi-search"></i></button>
                </form>
            </div>
            <div class="d-flex justify-content-around align-items-center col-xxl-3 col-ms-12 pe-5">
                <a href="/"><i class="bi bi-envelope nav-text fs-3 nav-btn"></i></a>
                <span class="btn-group">
                    <button type="button" class="btn dropdown-toggle nav-text" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person nav-text fs-3"></i>
                    </button>
                    {% if session.user is defined %}
                    <ul class="dropdown-menu bg-account" aria-expanded="false">
                        <li><a class="dropdown-item" href="/user/show?id={{ session.user.id }}">mon compte</a></li>
                        <li><a class="dropdown-item" href="/logout">se déconnecter</a></li>
                    </ul>
                    {% else %}
                    <ul class="dropdown-menu" aria-expanded="false">
                        <li><a href="/login" class="dropdown-item">me connecter</a></li>
                        <li><a href="/register" class="dropdown-item">s'enregistrer</a></li>
                    </ul>
                    {% endif %}
                </span>
                <a href="/"><i class="bi bi-heart nav-text fs-3 nav-btn"></i></a>
                <a href="/cart"><i class="bi bi-cart nav-text fs-3 nav-btn"></i></a>
                {% if session.user is defined %}
                {% if session.user.is_admin == 1 %}
                <div class="vr nav-text"></div>
                <a href="/admin"><i class="bi bi-gear nav-text fs-3 nav-btn"></i></a>
                {% endif %}
                {% endif %}
            </div>
        </div>
    </nav>
</header>
{% endblock %}